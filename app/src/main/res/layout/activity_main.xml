<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tvActiveOperator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="left|top"
            android:padding="10dp"
            android:text="+"
            android:textColor="#bebebe"
            android:textSize="23sp"
            tools:ignore="NestedWeights,RtlHardcoded" />

        <TextView
            android:id="@+id/tvSecondPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:gravity="bottom"
            android:maxLines="1"
            android:padding="10dp"
            android:text="47"
            android:textAlignment="viewEnd"
            android:textColor="#bebebe"
            android:textSize="26sp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvMainPreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text="47"
        android:textAlignment="viewEnd"
        android:textColor="#fff"
        android:textSize="38sp"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="#000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/btnAC"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC" />

            <Button
                android:id="@+id/btnC"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C" />

            <Button
                android:id="@+id/btnPI"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="π" />

            <Button
                android:id="@+id/btnPercentage"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5">

            <Button
                android:id="@+id/btnSin"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="sin"
                android:textSize="23sp" />

            <Button
                android:id="@+id/btnCos"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="cos"
                android:textSize="23sp" />

            <Button
                android:id="@+id/btnTan"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="tan"
                android:textSize="23sp" />

            <Button
                android:id="@+id/btnLog"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="log"
                android:textSize="23sp" />

            <Button
                android:id="@+id/btnLn"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ln"
                android:textSize="23sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5">

            <Button
                android:id="@+id/btnFactorial"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="x!" />

            <Button
                android:id="@+id/btnSquare"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="x²" />

            <Button
                android:id="@+id/btnSquareRoot"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="√" />

            <Button
                android:id="@+id/btnInverse"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1/x"
                android:textSize="23sp" />

            <Button
                android:id="@+id/btnDivision"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="÷" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/btnNumberSeven"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnNumberEight"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnNumberNine"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnMultiplication"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="×" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/btnNumberFour"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnNumberFive"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnNumberSix"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnSubtraction"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/btnNumberOne"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnNumberTwo"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnNumberThree"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnAddition"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/btnPlusMin"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="±"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnNumberZero"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnPeriod"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="." />

            <Button
                android:id="@+id/btnEqual"
                style="@style/CalculatorButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>